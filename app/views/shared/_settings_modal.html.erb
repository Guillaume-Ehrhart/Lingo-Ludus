<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settingsModalLabel">Settings</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- BEGIN Settings content -->
        <%= form_for :game, url: games_path, html: { id: "gameSettingsForm" } do |f| %>
          <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="enableTimerCheckbox" data-action="change->timer#toggleTimer" checked>
            <label class="form-check-label" for="enableTimerCheckbox">Enable Timer</label>
          </div>
          <select id="language" data-guess-target="language" data-dark-mode-target="difficultyDropdown" class="form-control drop border border-dark rounded-4">
            <% @languages.each do |language| %>
              <option value="<%= language.id %>"><%= language.name %></option>
            <% end %>
          </select>
          <div class="form-group form-check">
            <input type="checkbox" data-dark-mode-target="checkbox" class="form-check-input" id="enableDarkMode" data-action="change->dark-mode#toggleDarkMode">
            <label class="form-check-label" for="enableDarkMode">Enable Dark Mode</label>
          </div>
        <% end %>
      </div>
      <!-- END Settings content  -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
