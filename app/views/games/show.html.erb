<h1>Game</h1>

<p>Category: <%= @game.category.name %></p>
<p>Difficulty: <%= @game.difficulty_level %></p>
<p>Attempts: <%= @game.attempts %></p>
<% if @word_to_guess %>
  <p>Definition: <%= @word_to_guess.definition %></p>
  <%= form_with url: guess_word_game_path(@game), local: true, method: :post do |form| %>
    <div class="field">
      <%= form.label :guess %>
      <%= form.text_field :guess %>
    </div>
    <div class="actions">
      <%= form.submit "Submit Guess" %>
    </div>
  <% end %>
<% else %>
  <p>No word available for this game.</p>
<% end %>

<%= link_to 'Back', games_path %>
