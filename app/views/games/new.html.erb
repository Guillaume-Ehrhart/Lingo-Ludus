<h1>Start a New Game</h1>
<%= form_with model: @game, local: true do |form| %>
  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, @categories, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :difficulty_level %>
    <%= form.select :difficulty_level, @levels %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
