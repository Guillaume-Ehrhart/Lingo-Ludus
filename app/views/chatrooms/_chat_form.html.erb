<div class="container">
  <div class="sidebar">
    <div class="form-container">

    <%= simple_form_for(chatroom, html: { data: { add_chatroom_target: "form", action: "submit->add_chatroom#send" } }) do |f| %>

        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Name", class: "form-control" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Add", class: "mt-1 chatroom-submit-btn"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
