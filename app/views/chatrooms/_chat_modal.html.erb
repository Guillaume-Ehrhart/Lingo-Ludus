<% @chatrooms.each do |chatroom| %>
  <!-- Modal for renaming each chatroom -->
  <div class="modal fade" id="renameChatroomModal<%= chatroom.id %>" tabindex="-1" aria-labelledby="renameChatroomModalLabel<%= chatroom.id %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="renameChatroomModalLabel<%= chatroom.id %>">Rename Chatroom</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: chatroom, url: chatroom_path(chatroom), method: :patch, local: true do |f| %>
          <div class="modal-body">
            <div class="mb-3">
              <%= f.label :name, "New Chatroom Name" %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Enter new chatroom name' %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit 'Rename', class: 'btn btn-modal-rename' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
