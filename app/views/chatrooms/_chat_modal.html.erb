<!-- Modal -->
<% @chatrooms.each do |chatroom| %>
  <div class="modal fade" id="renameChatroomModal<%= chatroom.id %>" tabindex="-1" aria-labelledby="renameChatroomModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="renameChatroomModalLabel">Rename Chatroom</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with model: chatroom, url: chatroom_path(chatroom), method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :name, "New Chatroom Name" %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Enter new chatroom name' %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <%= f.submit 'Rename', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
