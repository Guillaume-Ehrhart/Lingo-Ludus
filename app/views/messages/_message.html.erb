<div id="message-<%= message.id %>">
  <small>
    <%= link_to "+", chatroom_message_path(@chatroom, message), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "message-remove-link" %>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
